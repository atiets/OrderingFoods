<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/food_item_background"
    android:layout_marginVertical="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="12dp">

        <ImageView
            android:id="@+id/image_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:background="@drawable/circle_shape"
            android:elevation="2dp" />

        <ImageButton
            android:id="@+id/button_Note"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/food_button_background"
            android:contentDescription="Ghi chú"
            android:elevation="2dp"
            android:src="@drawable/note"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_NameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên món ăn"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tv_DescTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả món ăn này..."
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giá: 0 VND"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

    <ImageButton
        android:id="@+id/button_Add"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/food_add"
        android:contentDescription="Add"
        android:background="@drawable/food_button_background"
        android:padding="4dp"
        android:elevation="2dp" />

    <TextView
        android:id="@+id/tv_Quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="18sp"
        android:layout_marginHorizontal="12dp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/button_Subtract"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/food_minus"
        android:contentDescription="Subtract"
        android:background="@drawable/food_button_background"
        android:padding="4dp"
        android:elevation="2dp" />

</LinearLayout>
</LinearLayout>

    </LinearLayout>